  gem 'therubyracer' # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  gem 'uglifier', '>= 1.0.3'
end

# Sass is required in production (see layouts/email.html.erb)
gem 'sass-rails',   '~> 3.2.3'


