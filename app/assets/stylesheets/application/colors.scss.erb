<% Houston.config.colors.each do |name, value| %>
  $<%= name %>: <%= value.rgb %>;
<% end %>

@mixin age($color) {
  &.infant  { border-color: lighten($color, 14%); background-color: lighten($color, 35%); }
  &.child   { border-color: lighten($color,  8%); background-color: lighten($color, 28%); }
  &.adult   { border-color: lighten($color,  2%); background-color: lighten($color, 24%); }
  &.senior  { border-color:  darken($color,  8%); background-color: lighten($color, 20%); }
  &.old     { border-color:  darken($color, 12%); background-color: lighten($color, 16%); }
  &.ancient { border-color:  darken($color, 20%); background-color: lighten($color, 12%); }
}

#kanban li {
  <% Houston.config.colors.each do |name, value| %>
    &.<%= name %> { @include age($<%= name %>) }
  <% end %>
}

.label {
  vertical-align: baseline;
  
  <% Houston.config.colors.each do |name, value| %>
    &.<%= name %> { background-color: $<%= name %>; }
  <% end %>
}

.bubble {
  display: inline-block;
  width: 0.92em;
  height: 0.92em;
  border-radius: 2px;
  vertical-align: baseline;
  position: relative;
  top: 1px;
  margin-left: 0.25em;

  <% Houston.config.colors.each do |name, value| %>
    &.<%= name %> { background-color: $<%= name %>; }
  <% end %>
}

.stoplight {
  display: inline-block;
  width: 8px;
  height: 8px;
  border-radius: 8px;
  
  &.red { background-color: #B50000; }
  &.yellow { background-color: #D6B21F; }
  &.orange { background-color: #DF8A3D; }
  &.spring-green { background-color: #9FBD2A; }
  &.green { background-color: #42A800; }
}
