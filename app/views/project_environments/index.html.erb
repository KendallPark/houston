<%= header do |p| %>
  <%= p.breadcrumbs "Projects" => projects_path,
                  @project.name => Project.all,
                  "Environments" => nil %>
  <%= p.actions do %>
    <%= link_to 'New', new_project_environment_path(@project), :class => 'btn btn-primary' %>
  <% end %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @environments.each do |environment| %>
      <tr>
        <td><%= link_to environment.name, environment_path(environment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
