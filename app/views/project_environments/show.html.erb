<%= header do |p| %>
  <%= p.breadcrumbs "Projects" => projects_path,
                    @project.name => Project.all,
                    @environment.name => @project.environments %>
  <%= p.actions do %>
    <%= link_to 'Edit', edit_environment_path(@environment), :class => 'btn' %>
    <%= link_to 'Delete', environment_path(@environment), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <% end %>
<% end %>

<% if @releases.length > 0 %>
  <h5>Current Release</h5>
  <div class="current-release">
    <%= render :partial => @releases.first %>
  </div>
<% else %>
  <p>No releases.</p>
<% end %>

<% if @releases.length > 1 %>
  <h5>Past Releases</h5>
  <div class="previous-releases">
    <% @releases[1..-1].each do |release| %>
      <%= render :partial => release %>
    <% end %>
  </div>
<% end %>

<%= link_to 'New Release', new_project_environment_release_path(@project, @environment), :class => 'btn btn-primary' %>
