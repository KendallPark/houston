<%= render partial: "projects/header", locals: {project: @project, subtitle: "Testing Report"} %>

<% if @tickets.any? %>
  <ul class="tester-names">
    <li class="row-fluid">
      <div class="span8">&nbsp;</div>
      <div class="span4">
        <span class="ticket-verdict-summary">&nbsp;</span>
        <span class="tester-verdicts">
          <ul id="testers">
            <% @project.testers.each do |tester| %>
              <li class="tester"><%= tester.name %></li>
            <% end %>
          </ul>
        </span>
      </div>
    </li>
  </ul>
<% end %>
  
<div class="testing-reports-projects">
  
  <h4 class="testing-report-project"><b class="bubble <%= @project.color %>"></b> <%= @project.name %>&nbsp;&nbsp;Â»&nbsp;&nbsp;<span style="font-weight: normal;"><%= pluralize(@tickets.count, "tickets") %></span></h4>
  
  <% if @tickets.any? %>
    <ul id="tickets" class="tickets tickets-list"></ul>
    
    <% content_for :scripts do %>
      <script type="text/javascript">
        $(function(){
          var tickets = new Tickets(<%= raw TicketPresenter.new(@tickets).with_testing_notes.to_json %>);
          var view = new TestingTicketsView({tickets: tickets});
        });
      </script>
    <% end %>
  <% else %>
    
    <div class="alert alert-info">There are no tickets in testing for <b><%= @project.name %></b> right now.</div>
  <% end %>
  
</div>
