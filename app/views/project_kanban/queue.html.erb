<%= header do |p| %>
  <%= p.breadcrumbs "Kanban" => kanban_path,
                    @project.name => project_kanban_path(@project),
                    @queue.name => nil %>
<% end %>

<% if @queue.in_testing? %>
  <ul id="tickets" class="tickets"></ul>
  
  <% content_for :scripts do %>
    <script type="text/javascript">
      $(function(){
        window.userId = <%= current_user.id %>;
        var tickets = new Tickets(<%= raw TicketPresenter.new(@tickets).with_testing_notes.to_json %>);
        var view = new TestingTicketsView({tickets: tickets});
      });
    </script>
  <% end %>
  
<% else %>

  <ul class="tickets">
    <% @tickets.each do |ticket| %>
      <li><%= link_to_ticket(ticket) %></li>
    <% end %>
  </ul>

<% end %>
