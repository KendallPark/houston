<h1 class="project-banner <%= @project.color %>">
  <small>New Release for</small> <%= @project.name %>
</h1>

<div style="position:relative; border: 1px solid #ccc; padding: .66em 1.5em; background-color: #efefef; overflow:hidden;">
  <h3 style="color: rgba(0,0,0,0.15); font-size: 6.66em; position: absolute; top: 0.5em; left: 0.25em; margin: 0; padding: 0; -webkit-transform:rotate(-30deg); -moz-transform:rotate(-30deg); -ms-transform:rotate(-30deg); transform:rotate(-30deg);">Sample</h3>
  
  <%= render partial: "releases/changelog", locals: {release: @release} %>
</div>

<%= link_to "Create Release",
  new_release_url(@release, auth_token: @maintainer.authentication_token),
  :class => "btn btn-primary btn-large" %>
