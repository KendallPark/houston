<%= header do |p| %>
  <%= p.breadcrumbs "Kanban" => kanban_path,
                    @project => Project.all %>
<% end %>

<%= render :partial => "kanban/kanban" %>

<% content_for :scripts do %>
  <script type="text/javascript">
    $(function() {
      var kanban = new Kanban({id: <%= @project.unfuddle_id %>, color: '<%= @project.color %>'});
      kanban.loadQueues();
    });
  </script>
<% end %>
