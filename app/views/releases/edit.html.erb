<%= render partial: "releases/header", locals: {release: @release} %>

<% if params[:recreate] %>
  <%= link_to "Cancel", edit_release_path(@release), :class => "btn" %>
<% else %>
  <%= link_to "Recreate", edit_release_path(@release, :recreate => true), :class => "btn" %>
<% end %>

