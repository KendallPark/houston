<%= header do |p| %>
  <%= p.breadcrumbs "Projects" => projects_path,
                    @project.name => Project.all,
                    @environment.name => @project.environments,
                    "Releases" => nil %>
  <%= p.actions do %>
    <%= link_to 'New', new_project_environment_release_path(@project, @environment), :class => 'btn btn-primary' %>
  <% end %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= link_to release.name, release %></td>
        <td><%= release.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

