<%= header do |p| %>
  <%= p.breadcrumbs "Projects" => projects_path,
                    @project => Project.all,
                    @environment => @project.environments,
                    "Releases" => nil %>
  <%= p.actions do %>
    <%= link_to "New Release", new_project_environment_release_path(@project, @environment), :class => 'btn btn-primary' %>
  <% end %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Changes</th>
      <th>Commits</th>
      <th>Release Date</th>
    </tr>
  </thead>
  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= link_to release.name, release %></td>
        <td><%= release.changes.count %></td>
        <td><%= release.commits.count %></td>
        <td><%= format_release_date(release) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

