<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%= csrf_meta_tags %>
    <meta name="relative_url_root" value="<%= main_app.root_url %>" />
    <meta name="revision" value="<%= revision %>" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "print", :media => "print" %>
    <%= yield :stylesheets %><%# so that Engines can hook in and add styles %>

    <!-- Le fav and touch icons -->
    <link rel="icon" type="image/x-icon" href="<%= ENV['RAILS_RELATIVE_URL_ROOT'] %>/favicon.png" />
    <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
    
    <!-- Templates -->
    <script id="ticket_template" type="text/x-handlebars-template">
      <li class="ticket {{projectSlug}} {{projectColor}} {{classForAge age}} {{verdict}}" id="ticket_{{id}}" data-number="{{number}}" data-project="{{projectTitle}}" {{{attributesForVerdict verdictsByTester}}}>
        <a href="https://<%= unfuddle.subdomain %>.unfuddle.com/a#/projects/{{projectId}}/tickets/by_number/{{number}}" target="_blank">
          <h3 class="ticket-number">{{number}} <span class="ticket-age">{{formatDuration age}}</span></h3>
          <p class="ticket-summary">{{summary}}</p>
        </a>
      </li>
    </script>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
          <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to Houston.config.title, main_app.root_url, class: "brand" %>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
              
              <%# Dashboards %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dashboard <b class="caret"></b></a>
                <ul class="dropdown-menu releases-menu">
                  <li><%= link_to "All Projects", main_app.dashboard_path %></li>
                  <li class="divider"></li>
                <% Project.all.each do |project| %>
                  <li class="project">
                    <%= link_to main_app.project_dashboard_path(project) do %>
                      <%= project.name %> <b class="bubble <%= project.color %>"></b>
                    <% end %>
                  </li>
                <% end %>
                </ul>
              </li>
              
              <%# Kanban %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Kanban <b class="caret"></b></a>
                <ul class="dropdown-menu kanban-menu">
                  <li><%= link_to "All Projects", kanban_path %></li>
                  <li class="divider"></li>
                <% Project.all.each do |project| %>
                  <li class="project">
                    <%= link_to main_app.project_kanban_path(project) do %>
                      <%= project.name %> <b class="bubble <%= project.color %>"></b>
                    <% end %>
                  </li>
                <% end %>
                </ul>
              </li>
              
              <%# Testing Reports %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Testing Reports <b class="caret"></b></a>
                <ul class="dropdown-menu testing-reports-menu">
                  <li><%= link_to "All Projects", main_app.testing_report_path %></li>
                  <li class="divider"></li>
                <% Project.all.each do |project| %>
                  <li class="project">
                    <%= link_to main_app.project_testing_report_path(project) do %>
                      <%= project.name %> <b class="bubble <%= project.color %>"></b>
                    <% end %>
                  </li>
                <% end %>
                </ul>
              </li>
              
              <%# Releases %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Releases <b class="caret"></b></a>
                <ul class="dropdown-menu releases-menu">
                <% Project.all.each do |project| %>
                  <li class="project">
                    <%= link_to main_app.project_releases_path(project) do %>
                      <%= project.name %> <b class="bubble <%= project.color %>"></b>
                    <% end %>
                  </li>
                <% end %>
                </ul>
              </li>
              
              <%# Modules %>
              <% Houston.config.modules.each do |mod| %>
                <% menu_items = mod.namespace.respond_to?(:menu_items) ? mod.namespace.menu_items : [] %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= mod.name.humanize %> <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                  <% menu_items.each do |(name, path)| %>
                    <li><%= link_to name, path %></li>
                  <% end %>
                  <% if menu_items.any? %>
                    <li class="divider"></li>
                  <% end %>
                  <% Project.all.each do |project| %>
                    <li class="project">
                      <%= link_to mod.namespace.menu_item_for_project(project) do %>
                        <%= project.name %> <b class="bubble <%= project.color %>"></b>
                      <% end %>
                    </li>
                  <% end %>
                  </ul>
                </li>
              <% end %>
              
              
              <% if can?(:read, Project) %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports <b class="caret"></b></a>
                <ul class="dropdown-menu reports-menu">
                  <li><%= link_to "Weekly Report", "/weekly_report" %></li>
                </ul>
              </li>
              <% end %>
              
              
              
              <li class="divider-vertical"></li>
              
              <li><%= link_to "Projects", main_app.projects_path %></li>

              <% if can?(:read, User) %>
                <li><%= link_to "Team", main_app.users_path %></li>
              <% end %>
              
              <% if current_user && current_user.administrator? %>
                <li><%= link_to "Resque", "/resque" %></li>
              <% end %>
              
            </ul>
            <ul class="nav pull-right">
              <% if current_user %>
                <li><%= link_to main_app.user_path(current_user) do %><span class="avatar-24" style="margin-right: 0"><%= avatar_for(current_user, size: 38) %></span><% end %></li>
                <li><%= link_to "Sign out", main_app.destroy_user_session_path %></li>
              <% else %>
                <li><%= link_to "Sign in", main_app.new_user_session_path %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid" id="body">
      <%= flash_messages :alert, :notice, :error %>
      <%= yield %>

      <!-- <footer>
        <p>&copy; Company 2012</p>
      </footer> -->

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "/assets/application" %>
    <%= ft_init :adapter => :jquery %>
    <script type="text/javascript">
      $(function(){
        window.testers = new Testers(<%= raw TesterPresenter.new(User.testers).to_json %>);
        
        <% if current_user %>
        window.userId = <%= current_user.id %>;
        window.user = new User(<%= raw({
          id: current_user.id,
          email: current_user.email,
          name: current_user.name,
          role: current_user.role
        }.to_json) %>);
        $('#body .avatar.user-' + window.userId).popover({
          title: 'Changing your Avatar',
          content: 'You can change your avatar by going to <a href="http://gravatar.com/">gravatar.com</a> and associating an image with your email address <b><%= current_user.email %></b>.'
        });
        <% end %>
        
        var $body = $('body');
        $body.keypress(function(e) {
          if(e.which == 102) { // f
            $body.toggleClass('full-screen');
            window.location.hash = $body.attr('class');
            if(window.kanbanObj) { kanbanObj.setKanbanHeight(); }
          }
        });
        
        $body.keydown(function(e) {
          if(e.keyCode == 27) {
            $body.attr('class', '');
            window.location.hash = '';
            if(window.kanbanObj) { kanbanObj.setKanbanHeight(); }
          }
        });
        
        var options = window.location.hash.substring(1).split(' ');
        if(_.include(options, 'full-screen')) {
          $body.toggleClass('full-screen');
          if(window.kanbanObj) { kanbanObj.setKanbanHeight(); }
        }
        
      });
    </script>
    <%= yield :javascripts %>
    <script type="text/javascript">
      $(function(){
        $('[rel="tooltip"]').each(function() {
          var $el = $(this),
              placement = $el.attr('data-tooltip-placement') || 'bottom';
          $el.tooltip({placement: placement});
        });
      });
    </script>

  </body>
</html>
